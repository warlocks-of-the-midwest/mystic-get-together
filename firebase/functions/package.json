  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/mocha": "5.2.5",
    "@types/supertest": "2.0.7",
    "chai": "4.2.0",
    "mocha": "5.2.0",
    "supertest": "3.4.2",
    "ts-node": "8.0.2",
